# Template file for 'wayscriber-configurator'
pkgname=wayscriber-configurator
version=${VERSION}
revision=1
build_style=cargo
configure_args="--manifest-path configurator/Cargo.toml"
hostmakedepends="pkg-config"
makedepends="cairo-devel wayland-devel pango-devel libxkbcommon-devel gcc glibc-devel"
depends="cairo wayland pango libgcc glibc libxkbcommon"
short_desc="GUI configurator for Wayscriber (Iced)"
maintainer="nerdyslacker <karyan40024@gmail.com>"
license="MIT"
homepage="https://wayscriber.com"
distfiles="https://github.com/devmobasa/wayscriber/archive/refs/tags/v${version}.tar.gz"
checksum=${SHA256}

do_install() {
    vbin target/${RUST_TARGET}/release/wayscriber-configurator

    vinstall README.md 644 usr/share/doc/${pkgname}
    [ -f LICENSE ] && vinstall LICENSE 644 usr/share/licenses/${pkgname}
}
