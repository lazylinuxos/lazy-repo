# Template file for 'python3-openapi-pydantic'
pkgname=python3-openapi-pydantic
version=0.5.1
revision=1
wrksrc="openapi-pydantic-${version}"
hostmakedepends="python3 python3-build python3-installer python3-poetry-core"
depends="python3 python3-pydantic python3-pydantic-core"
checkdepends="python3-pytest python3-openapi-spec-validator"
short_desc="Modern, type-safe OpenAPI schemas in Python using Pydantic 1.8+ and 2.x"
maintainer="nerdyslacker <karyan40024@gmail.com>"
license="MIT"
homepage="https://github.com/mike-oakley/openapi-pydantic"
distfiles="https://github.com/mike-oakley/openapi-pydantic/archive/refs/tags/v${version}.tar.gz"
checksum=9a74bb7759592d2e5d9999b6e20fd67487dc135391f75fb1d78e5501b674cad7

do_build() {
	python3 -m build --wheel --no-isolation
}

do_install() {
    local site_packages=$(python3 -c "import site; print(site.getsitepackages()[0])")
	python3 -m installer --destdir="${DESTDIR}" dist/*.whl
	vinstall LICENSE 644 usr/share/licenses/${pkgname}
	vinstall README.md 644 usr/share/doc/${pkgname}
}
