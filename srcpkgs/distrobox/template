checksum=83eab6ba893dce56f0523a70ebfcf2a78f7785637a6895255777ef1b72d4eb89

do_install() {
	./install --prefix "${DESTDIR}/usr"
	for f in $(find docs -type f -name '*.md'); do vdoc "$f"; done
}
