checksum=b4fcc60c0b856aac93385ea0eb88fb27fdaeb00b365c75e0eed497c306069837

do_install() {
	./install --prefix "${DESTDIR}/usr"
	for f in $(find docs -type f -name '*.md'); do vdoc "$f"; done
}
