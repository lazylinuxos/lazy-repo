# Template file for 'distrobox'
pkgname=distrobox
version=1.8.2.4
revision=1
short_desc="Podman/Docker wrapper to use any linux distribution in your terminal"
maintainer="nerdyslacker <karyan40024@gmail.com>"
license="GPL-3.0-or-later"
