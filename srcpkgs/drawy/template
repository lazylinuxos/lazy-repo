# Template file for 'drawy'
pkgname=drawy
version=1.0.0
revision=1
build_style=cmake
build_helper="qmake6"
configure_args="-DCMAKE_BUILD_TYPE=Release"
hostmakedepends="qt6-tools gcc"
makedepends="qt6-base-devel qt6-tools-devel qt6-declarative-devel Vulkan-Headers"
depends="glibc hicolor-icon-theme libgcc"
short_desc="An infinite whiteboard tool"
maintainer="nathan marchiori <nathan.marchiori@gmail.com>"
license="GPL-3.0-only"
homepage="https://github.com/Prayag2/drawy"
distfiles="https://github.com/Prayag2/drawy/archive/refs/tags/${version}-alpha.tar.gz"
checksum=904e5b0bf14222198cefd3e2e0d5adf852b0a528ae7b0149c67ccece88ea519f

do_install() {
    vbin build/drawy
    vinstall deploy/appimage/AppDir/usr/share/applications/drawy.desktop 644 usr/share/applications
    vinstall deploy/appimage/AppDir/usr/share/icons/hicolor/256x256/apps/drawy.png 644 usr/share/icons/hicolor/256x256/apps
}
